---Ping Pong

package main

import (
	"fmt"
	"time"
)

func pinger(click chan string) {
	for i := 1; i < 6; i++ {
		click <- "ping"
	}
}

func printer(click chan string) {
	for {
		msg := <-click
		fmt.Println(msg)
		time.Sleep(time.Second * 1)
	}
}

func ponger(click chan string) {
	for i := 1; i < 6; i++ {
		click <- "pong"
	}
}

func main() {
	var click chan string = make(chan string)

	go pinger(click)
	go printer(click)
	go ponger(click)

	var input string
	fmt.Scanln(&input)
}
